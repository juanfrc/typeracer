<!DOCTYPE html>
<html>
<head>
  <title>TypeRacer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <nav>
          <div class="navbar-brand text-muted">
            <a href = <%= root_path %>> <span style="color:#C9E6FA">Type<strong style="color:#7CBCFB">Racer</strong></span></a> 
          </div>
          <div class="navbar-right">
            <% if current_user %>
              <div class="navbar-text">Welcome <strong><%= link_to current_user.name, user_path(current_user) %></strong>!</div>
              <li class="dropdown navbar-right">
              <a href="#" class="dropdown-toggle navbar-right" data-toggle="dropdown" role="button" aria-expanded="false"><%= image_tag current_user.image, class: "image_bar" %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                
                
                <li><a href="#"><%= link_to "Users", users_path  %></a></li>
                <li><a href="#"><%= link_to "Scores", scores_path %></a></li>
                <li class="divider"></li>
                <li><a href="#"><%= link_to "Sign out", signout_path, id: "sign_out" %></a></li>
              
              </ul>
            </li>
            <% end %>
          </div>
        </nav>
      </div>
    </header>
    <div class="container-fluid">

     
      <%= yield %>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script> 
    <script src="https://rawgit.com/johnschult/jquery.countdown360/master/dist/jquery.countdown360.min.js"></script>

  </body>
</html>