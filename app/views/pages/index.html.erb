<div class = "content">
	<% if current_user %>
		<div id="user_id" data-user="<%= current_user.id %>"></div>	
			<div class="col-md-5 col-md-offset-1">
				<div class="square">
			 		<!-- <div class="col-md-4 col-md-offset-4">	 -->
			 			<div class="timer">
			 			</div>
			 		<!-- </div> -->
		 			<div class="col-md-6 col-md-offset-3">
			 			<button class="btn btn-lg btn-primary start">Start Typing Race</button>
		 			</div>
	 			</div>
			 </div>

			 <div class="col-md-5 col-md-offset-1">
				<div class="info">
					<h3 class="center">Top scores </h3>
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Score</th>       
							</tr>
						</thead>
						<tbody class= "tablebody">
							<% @highscores.each do |score| %>
								<tr>
									<td><%= @users.find(score[:user_id]).name %></td>
									<td><%= score[:point] %></td>
								</tr>
							<% end %>	
						</tbody>
					</table>
	 			</div>
 			</div>
		 </div>
	<% else %>
		<div class="row">
  			<div class="col-md-4 col-md-offset-4">
  				<div class="btn btn-lg" id="ghost-btn">
					<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn" %>
				</div>
			</div>
		</div>
	<% end %>


</div>


